---
import Image from "./Image.astro"

const image = {
    src: '~/assets/images/fersa-logo-dark.gif',
    alt: 'Fersa Logo'
}

const darkImage = {
    src: '~/assets/images/fersa-logo.png',
    alt: 'Fersa Logo'
}

---
<Image
    class="mx-auto rounded-md w-full block dark:hidden"
    sizes="(max-width: 100px) 80px "
    loading="eager"
    width={120}
    height={30}
    {...image}
/>
<Image
    class="mx-auto rounded-md w-full hidden dark:block"
    sizes="(max-width: 100px) 80px "
    loading="eager"
    width={120}
    height={30}
    {...darkImage}
/>
